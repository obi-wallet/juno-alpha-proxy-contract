{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InstantiateMsg",
  "type": "object",
  "required": [
    "admin",
    "hot_wallets"
  ],
  "properties": {
    "admin": {
      "type": "string"
    },
    "hot_wallets": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/HotWallet"
      }
    }
  },
  "definitions": {
    "CoinLimit": {
      "type": "object",
      "required": [
        "amount",
        "denom",
        "limit_remaining"
      ],
      "properties": {
        "amount": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "denom": {
          "type": "string"
        },
        "limit_remaining": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "HotWallet": {
      "type": "object",
      "required": [
        "address",
        "current_period_reset",
        "period_multiple",
        "period_type",
        "spend_limits"
      ],
      "properties": {
        "address": {
          "type": "string"
        },
        "current_period_reset": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "period_multiple": {
          "type": "integer",
          "format": "uint16",
          "minimum": 0.0
        },
        "period_type": {
          "$ref": "#/definitions/PeriodType"
        },
        "spend_limits": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CoinLimit"
          }
        },
        "usdc_denom": {
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "PeriodType": {
      "type": "string",
      "enum": [
        "DAYS",
        "MONTHS"
      ]
    }
  }
}
